<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/teal_200">
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_arrow_back_ios_new_black_24dp"/>
        <TextView
                android:id="@+id/tv_chat_contact_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ContactName"
                android:paddingLeft="60dp"
                android:gravity="center|left"
                android:singleLine="true"
                android:textSize="30sp"
                android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@color/teal_200"
            android:layout_alignParentBottom="true">
        <EditText
                android:id="@+id/et_chat"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:hint="       输入内容...."
                android:background="@drawable/chat_et_bg"/>
        <ImageView
                android:id="@+id/iv_add_picture"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_add_circle_outline_black_24dp"/>
        <ImageView
                android:id="@+id/iv_send"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_send_black_24dp"/>
    </LinearLayout>

</RelativeLayout>