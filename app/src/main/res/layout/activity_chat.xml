<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/ll_chat_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#55888888">
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/baseline_arrow_back_ios_new_black_24dp"/>
        <TextView
                android:id="@+id/tv_chat_contact_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ContactName"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:singleLine="true"
                android:textSize="20sp"
                android:textColor="@color/black"/>
    </LinearLayout>

    <ListView
            android:id="@+id/lv_chat_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_chat_top"
            android:layout_above="@+id/ll_chat_bottom"/>

    <LinearLayout
            android:id="@+id/ll_chat_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:background="#55888888"
            android:layout_alignParentBottom="true">
        <ImageView
                android:id="@+id/iv_add_picture"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_circle_outline_black_24dp"/>
        <EditText
                android:id="@+id/et_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:layout_weight="10"
                android:hint="       输入内容...."
                android:padding="5dp"
                android:background="@drawable/chat_et_bg"/>
        <ImageView
                android:id="@+id/iv_send"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_send_black_24dp"/>
    </LinearLayout>

</RelativeLayout>